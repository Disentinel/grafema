{
  "name": "grafema",
  "version": "0.1.0",
  "private": true,
  "description": "Grafema code analysis toolkit - monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "lint": "eslint packages/",
    "mcp": "node --import tsx packages/mcp/src/server.ts",
    "test": "node --test test/unit/",
    "test:scenarios": "node --test test/scenarios/",
    "publish:all": "./scripts/publish.sh"
  },
  "keywords": [
    "grafema",
    "static-analysis",
    "code-analysis",
    "ast",
    "graph"
  ],
  "author": "Vadim Reshetnikov",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Disentinel/grafema.git"
  },
  "devDependencies": {
    "@grafema/core": "workspace:*",
    "@grafema/types": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.0"
}
