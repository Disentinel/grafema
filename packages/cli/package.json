{
  "name": "@grafema/cli",
  "version": "0.2.9",
  "description": "CLI for Grafema code analysis toolkit",
  "type": "module",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "grafema": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "src",
    "skills"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "mkdir -p dist/plugins && cp src/plugins/pluginResolver.js dist/plugins/",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js",
    "test": "node --import tsx --test test/*.test.ts"
  },
  "keywords": [
    "grafema",
    "cli",
    "code-analysis",
    "static-analysis"
  ],
  "license": "Apache-2.0",
  "author": "Vadim Reshetnikov",
  "repository": {
    "type": "git",
    "url": "https://github.com/Disentinel/grafema.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@grafema/api": "workspace:*",
    "@grafema/core": "workspace:*",
    "@grafema/types": "workspace:*",
    "commander": "^13.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "typescript": "^5.9.3"
  }
}
